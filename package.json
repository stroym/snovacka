{
  "name": "snovacka",
  "version": "0.0.0",
  "description": "Engine for making text based games",
  "main": "index.tsx",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/stroym/nheyrs-garden"
  },
  "author": "stroym",
  "license": "GNU GPL V3",
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@babel/register": "^7.12.1",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.0.1",
    "eslint": "^7.15.0",
    "fork-ts-checker-webpack-plugin": "^6.0.5",
    "html-webpack-plugin": "^4.5.0",
    "pre-commit": "^1.2.2",
    "process": "^0.11.10",
    "prop-types": "^15.7.2",
    "raw-loader": "^4.0.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-markdown": "^5.0.3",
    "react-refresh": "^0.9.0",
    "react-scripts": "4.0.1",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.11",
    "type-fest": "^0.20.2",
    "typescript": "^4.1.2",
    "web-vitals": "^0.2.4",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "scripts": {
    "dev": "webpack --mode development",
    "start": "webpack serve",
    "build": "webpack --mode production",
    "eject": "react-scripts eject",
    "lint": "eslint '*/**/*.{ts,tsx}' --quiet --fix"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "react"
    ],
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:react/recommended"
    ],
    "rules": {
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1,
          "MemberExpression": "off"
        }
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1,
          "maxBOF": 1,
          "maxEOF": 1
        }
      ],
      "no-empty-function": "warn"
    }
  },
  "pre-commit": [
    "lint"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ]
  }
}
